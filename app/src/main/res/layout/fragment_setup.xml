<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_shizuku_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/light_red"
        app:cardCornerRadius="36dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- 图标 + 圆形背景 -->
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle">

                <ImageView
                    android:id="@+id/shizuku_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="TODO"
                    android:src="@drawable/outline_cancel_24"
                    app:tint="@color/teal_700" />

            </RelativeLayout>

            <!-- 文本内容 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <!-- 主文本 -->
                <TextView
                    android:id="@+id/shizuku_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shizuku 服务不可用"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <!-- 描述文本 -->
                <TextView
                    android:id="@+id/shizuku_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="版本 13.5, root"
                    android:textColor="#808080"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_root_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/light_green"
        app:cardCornerRadius="36dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- 图标 + 圆形背景 -->
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle">

                <ImageView
                    android:id="@+id/root_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="TODO"
                    android:src="@drawable/baseline_check_circle_outline_24"
                    app:tint="@color/teal_700" />

            </RelativeLayout>


            <!-- 文本内容 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <!-- 主文本 -->
                <TextView
                    android:id="@+id/root_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Root 服务可用"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <!-- 描述文本 -->
                <TextView
                    android:id="@+id/root_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text=""
                    android:textColor="#808080"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_xposed_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/light_red"
        app:cardCornerRadius="36dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- 图标 + 圆形背景 -->
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle">

                <ImageView
                    android:id="@+id/xposed_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="TODO"
                    android:src="@drawable/outline_cancel_24"
                    app:tint="@color/teal_700" />

            </RelativeLayout>

            <!-- 文本内容 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <!-- 主文本 -->
                <TextView
                    android:id="@+id/xposed_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Xposed 框架不可用"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <!-- 描述文本 -->
                <TextView
                    android:id="@+id/xposed_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="部分功能不可用(LSPatch则忽略)"
                    android:textColor="#808080"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/switch_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/teal_200"
        app:cardCornerRadius="36dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Switch
                android:id="@+id/float_window_main_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                android:text="打开悬浮窗(重启进程生效)"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <Switch
                android:id="@+id/float_window_sub_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="12sp"
                android:enabled="false"
                android:text="模块悬浮窗开关"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>